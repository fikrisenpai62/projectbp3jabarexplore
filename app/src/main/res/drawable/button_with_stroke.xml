<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFC300" /> <!-- Warna saat ditekan -->
            <stroke
                android:width="2dp"
                android:color="#FF5733" /> <!-- Warna stroke -->
            <corners android:radius="12dp" /> <!-- Sudut melengkung -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Warna latar -->
            <stroke
                android:width="2dp"
                android:color="#FF5733" /> <!-- Warna stroke -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
